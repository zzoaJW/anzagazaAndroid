<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/searchbar_background">

    <Button
        android:id="@+id/complete_boarding_btn"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/anza_blue"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/complete_boarding_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="90dp"
        android:text="00역"
        android:textColor="@color/anza_string_default"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/complete_boarding_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="에"
        android:textColor="@color/anza_string_default"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/complete_boarding_station_name"
        app:layout_constraintStart_toEndOf="@+id/complete_boarding_station_name"
        app:layout_constraintTop_toTopOf="@+id/complete_boarding_station_name" />

    <TextView
        android:id="@+id/complete_boarding_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도착하셨습니다!"
        android:textColor="@color/anza_string_default"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/complete_boarding_station_name"
        app:layout_constraintTop_toBottomOf="@+id/complete_boarding_station_name" />
</androidx.constraintlayout.widget.ConstraintLayout>