<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/anzagaza_background">

    <ImageView
        android:id="@+id/search_station_bottom_dialog_item_hosun_img"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/line_circle" />

    <TextView
        android:id="@+id/search_station_bottom_dialog_item_hosun_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="0호선"
        android:textColor="@color/anza_string_default"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_station_bottom_dialog_item_hosun_img"
        app:layout_constraintStart_toEndOf="@+id/search_station_bottom_dialog_item_hosun_img"
        app:layout_constraintTop_toTopOf="@+id/search_station_bottom_dialog_item_hosun_img" />

    <TextView
        android:id="@+id/search_station_bottom_dialog_item_hosun_img_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/search_station_bottom_dialog_item_hosun_img"
        app:layout_constraintEnd_toEndOf="@+id/search_station_bottom_dialog_item_hosun_img"
        app:layout_constraintStart_toStartOf="@+id/search_station_bottom_dialog_item_hosun_img"
        app:layout_constraintTop_toTopOf="@+id/search_station_bottom_dialog_item_hosun_img" />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/anza_gray_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>